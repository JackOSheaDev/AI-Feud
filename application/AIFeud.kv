#:import utils kivy.utils

# =============== MAIN SCREEN ===============
<MainScreen>

    # Background Section
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#293241')
        Rectangle:
            pos: self.pos
            size: self.size

    # Set up Layout and initialise components.
    BoxLayout:
        orientation: 'vertical'

        # Introduction Label
        Label:
            text: 'Welcome to AI Feud'
            font_name: 'Anton'
            font_size: 60

            # Set the colour of the text
            color: utils.get_color_from_hex('#00E8FC')

        # Name Label
        Label:
            text: 'Made by Jack 0\'Shea'
            font_name: 'DejaVuSans'
            font_size: 30

            # Set the colour of the text.
            color: utils.get_color_from_hex('#00E8FC')

        # Button to start the game.
        Button:
            id: start_button
            size_hint: 0.75, 0.3
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            fontsize: 40
            text: 'Press to Start'
            font_name: 'DejaVuSans'
            color: utils.get_color_from_hex('#293241')

            # Call function on press to start the game.
            on_press: root.start()
            background_normal: ''
            background_color: utils.get_color_from_hex('#00E8FC')



# =============== GAME SCREEN ===============
<GameScreen>
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#293241')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing: 10
        id: main_box
        orientation: 'vertical'

        # Static content
        Label:
            text: 'What\'s in this Image ?'
            font_name: 'DejaVuSans'
            color: utils.get_color_from_hex('#00E8FC')
            font_size: 30

        # Dynamic set by program
        AsyncImage:
            id: image_used
            allow_stretch: True
        #Dynamic set by program
        Label:
            id: life_counter
            font_name: 'DejaVuSans'
            color: utils.get_color_from_hex('#00E8FC')
            font_size: 30

        # Dynamic Added to.
        GridLayout:
            orientation: 'tb-lr'
            id: answers
            cols: 2
            rows: 3


